<html lang="pt-BR">
    <%- include('../partials/header.ejs') %>
    <body>
        <header>
            <%- include('../partials/navbar.ejs'); %>    
        </header>                
      <main>
        <section class="container text-center mt-5">
                <hr>
                <div class="row">
                    <div class="col-sm-8">
                        <h3>Perguntas</h3>
                    </div>                    
                    <div class="col-sm-4">
                        <a href="/pergunta" class="btn btn-primary m-2">Perguntar</a>
                    </div>
                </div>
                <hr>                
                <% perguntas.forEach(pergunta => { %>
                    <div class="card">
                        <div class="card-body">
                            <h3><%= pergunta.titulo %></h3>                           
                        </div>
                        <div class="card-footer">
                            <a href="/pergunta/<%= pergunta.id %>" > <button type="button" class="btn btn-primary m-2">Responder</button> </a>
                        </div>
                    </div>                   
                <% }) %>
        </section>
      </main>
    </body>
    
    <%- include('../partials/scripts.ejs'); %>
</html>