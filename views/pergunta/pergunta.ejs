<html lang="pt-BR">
    <%- include('../partials/header.ejs') %>    
    <body>
        <header>
            <%- include('../partials/navbar.ejs'); %>    
        </header>                
        <main>        
            <section class="container text-center mt-5">                
                <div class="container">
                    <% if(typeof respostas !== 'undefined') {%>
                        <hr>
                        <h3>Respostas</h3>
                        <hr>
                        <% respostas.forEach(resposta => {%>
                            <br>
                            <div class="card">
                                <div class="card-body">
                                    <p><%= resposta.corpo %></p>
                                </div>
                            </div>
                        <% }) %>                    
                    <% } %>                    
                    <div class="card" id="formulario-pergunta">
                        <div class="card-header">
                            <h3>Realizar pergunta</h3>
                        </div>
                        <div class="card-body">
                            <form method="post" action="/pergunta">
                                <label>Título</label>
                                <input type="text" name="titulo" id="titulo" placeholder="Título" class="form-control">
                                <br><label>Descrição</label>
                                <textarea  name="descricao" id="descricao" placeholder="Descreva sua pergunta aqui" class="form-control"></textarea>
                                <br>
                                <button class="btn btn-primary">Perguntar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
      </main>
    </body>
    <%- include('../partials/scripts.ejs'); %>
</html>